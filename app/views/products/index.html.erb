<div class="container">
  <%= simple_form_for :search, url: products_path, method: :get do |f| %>
    <div class="search-form-control form-group mt-5 mb-5">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Entrez le nom d'un objet"
      %>
      <%= submit_tag "Search", class: "btn btn-warning" %>
    </div>
  <% end %>
  <div class="cards">
    <% @products.each do |product| %>

          <div class="card mt-5 mb-5" style="width: 18rem;">
            <%= cl_image_tag product.photo.key, class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><strong>NAME: </strong><%= product.name %></h5>
              <p class="card-text"><strong>STATE: </strong><%= product.state %></p>
              <%= link_to 'Voir les dÃ©tails', product_path(product), class: 'btn btn-warning' %>
            </div>
          </div>
    <% end %>
  </div>
  <div class="rounded w-100" style="width: 100%; height: 600px;"
