<div class="container mx-auto mb-5">
  <h1 class="card-title text-center"><%= @product.name %></h1>
  <div class="row mt-5">
    <div class="col-12 col-md-4">
      <% if @product.photo.attached? %>
        <%= cl_image_tag @product.photo.key, style: 'width: 100%; max-height: 60vh; display: block; object-fit: contain;' %>
      <% end %>
    </div>
    <div class="col-12 col-md-4">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>DESCRIPTION: </strong><%= @product.description %></li>
        <li class="list-group-item"><strong>ADDRESS: </strong><%= @product.address %></li>
        <li class="list-group-item"><strong>STATE: </strong><%= @product.state %></li>
      </ul>
      <div class="">
        <% if @product.bookings.any? %>
          <% if @product.bookings.first.user = current_user %>
            <p>Vous avez reserv√© cet objet pour le recuperer le <%= @product.bookings.first.date %></p>
          <% end %>
        <% else %>
          <%= simple_form_for([@product, @booking]) do |f| %>
            <%= f.input :date, html5: true %>
            <%= f.input :message %>
            <%= f.submit %>
          <% end %>
        <% end %>
      </div>

    </div>

      <%#= link_to 'BOOK NOW', product_bookings_path(@product), data: { turbo_method: 'POST' }, class: 'btn btn-primary' %>
    <div class="col-12 col-md-4">
      <div style="width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
