<div class="container mx-auto mt-3 mb-5">
  <h1 class="text-center mb-4"><strong>DÉTAIL OBJET</strong></h1>
  <h2 class="card-title text-center"><%= @product.name %></h2>
  <div class="row mt-5">
    <div class="col-12 col-md-4">
      <% if @product.photo.attached? %>
        <%= cl_image_tag @product.photo.key, style: 'width: 100%; max-height: 60vh; display: block; object-fit: contain;' %>
      <% end %>
    </div>
    <div class="col-12 col-md-4">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>DESCRIPTION: </strong><%= @product.description %></li>
        <li class="list-group-item"><strong>ADRESSE: </strong><%= @product.address %></li>
        <li class="list-group-item"><strong>ÉTAT: </strong><%= @product.state %></li>
      </ul>
      <% if @product.booked? %>
        <hr>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>DATE DE RÉSERVATION: </strong><%= @product.booking.date.strftime("%A %d %B %Y") %></li>
          <li class="list-group-item"><strong>MESSAGE: </strong><%= @product.booking.message %></li>
        </ul>
        <% end %>
      <div class="">
        <% unless @product.booked? %>
          <%= simple_form_for([@product, @booking]) do |f| %>
            <%= f.input :date, html5: true %>
            <%= f.input :message %>
            <%= f.submit %>
          <% end %>
        <% end %>
      </div>

    </div>

      <%#= link_to 'BOOK NOW', product_bookings_path(@product), data: { turbo_method: 'POST' }, class: 'btn btn-primary' %>
    <div class="col-12 col-md-4">
      <div style="width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="pk.eyJ1IjoiZWltc2VlIiwiYSI6ImNsYWxoYjN1ZTA1amkzcW50dG9lOXZvencifQ.HwOYmj6MTzhZQVUsLFqubQ">
      </div>

    </div>
  </div>
</div>
